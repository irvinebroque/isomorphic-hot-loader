{
  "name": "isomorphic-hot-loader",
  "version": "0.0.4",
  "description": "An actively maintained starter project for building isomorphic web apps with React.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/irvinebroque/isomorphic-hot-loader.git"
  },
  "main": "server.js",
  "author": "Brendan Irvine-Broque <brendanib@gmail.com>",
  "scripts": {
    "dev": "NODE_ENV=development supervisor --harmony --ignore build/ -e js server & NODE_ENV=development node hotLoadServer.js",
    "start": "NODE_ENV=production node --harmony server",
    "lint": "eslint ./",
    "typecheck": "flow",
    "build": "NODE_ENV=production webpack -p --progress --colors",
    "test": "jest && eslint ./"
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "jsx": true,
      "blockBindings": true,
      "forOf": true,
      "generators": true
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "strict": [
        2,
        "global"
      ],
      "no-underscore-dangle": false,
      "quotes": false,
      "no-unused-vars": false,
      "new-cap": false
    }
  },
  "jest": {
    "scriptPreprocessor": "preprocessor.js",
    "unmockedModulePathPatterns": [
      "node_modules/react"
    ]
  },
  "dependencies": {
    "babel": "^6.5.2",
    "babel-runtime": "^6.20.0",
    "body-parser": "^1.12.0",
    "chroma-js": "^1.2.1",
    "compression": "^1.3.0",
    "cors": "^2.5.2",
    "express": "^4.3.2",
    "flux": "^3.1.2",
    "fuzzy": "^0.1.0",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.8.4",
    "node-jsx": "^0.13.3",
    "object-assign": "^4.1.0",
    "react": "^15.4.2",
    "react-a11y": "0.3.3",
    "react-document-title": "^2.0.2",
    "react-router": "^3.0.0",
    "ua-parser-js": "^0.7.3",
    "when": "^3.6.3"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "eslint": "^3.13.1",
    "jest-cli": "^18.1.0",
    "json-loader": "^0.5.1",
    "react-hot-loader": "^1.0.4",
    "react-tools": "^0.13.3",
    "supervisor": "^0.12.0",
    "webpack": "^1.5.3",
    "webpack-dev-server": "^1.7.0"
  }
}
